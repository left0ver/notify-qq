{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore(release): release v${version}",
    "tag": true,
    "requireUpstream": false,
    "requireCommits": true
  },
  "hooks": {
    "before:init": ["git pull", "npm run build"],
    "after:bump": "npx changelogithub"
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "autoGenerate": true
  },
  "npm": {
    "publish": true
  }
}
